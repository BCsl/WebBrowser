<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:background="?attr/colorPrimaryDark"
	android:id="@+id/datamanager">

	<LinearLayout
		android:layout_height="?attr/actionBarSize"
		android:layout_width="match_parent"
		android:gravity="left|center_vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="清理数据"/>

	</LinearLayout>
<LinearLayout
	android:layout_height="0dp"
	android:layout_weight="1"
	android:layout_width="match_parent"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/datamanager_view_searchhistory"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="输入历史"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>

	<RelativeLayout
		android:id="@+id/datamanager_view_webhistory"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="浏览历史"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>

	<RelativeLayout
		android:id="@+id/datamanager_view_cache"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="缓存文件"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>

	<RelativeLayout
		android:id="@+id/datamanager_view_form"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="表单数据"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>

	<RelativeLayout
		android:id="@+id/datamanager_view_cookies"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Cookies"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>

	<RelativeLayout
		android:id="@+id/datamanager_view_outprograme"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="清除链接外部程序记录"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>
	
	<RelativeLayout
		android:id="@+id/datamanager_view_autoclear"
		android:layout_height="?attr/actionBarSize"
		android:layout_width="match_parent"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="退出自动清理"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"/>

		<CheckBox
			android:clickable="false"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>
	</LinearLayout>
	<View
		android:layout_height="1px"
		android:layout_width="match_parent"
		android:layout_marginStart="2dp"
		android:layout_marginEnd="2dp"
		android:background="@color/border"/>
	<LinearLayout
		android:layout_height="?attr/actionBarSize"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<Button
			android:id="@+id/datamanager_view_cancel"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/cancel"
			android:layout_weight="1.0"
			android:background="?attr/selectableItemBackground"/>
		<View
			android:layout_height="match_parent"
			android:layout_width="1px"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:background="@color/border"/>
		
		<Button
			android:id="@+id/datamanager_view_sure"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/sure"
			android:layout_weight="1.0"
			android:background="?attr/selectableItemBackground"/>

	</LinearLayout>

</LinearLayout>

