<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_alignParentTop="true">

			<TextView
				android:id="@+id/bookmarkedit_view_bigtitle"
				android:textColor="?attr/colorAccent"
				android:layout_height="?attr/actionBarSize"
				android:layout_width="match_parent"
				android:text="编辑"
				android:gravity="center_vertical"
				android:paddingLeft="15dp"/>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/bookmarkedit_view_title"
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<EditText
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:ems="10"
					android:hint="名称"/>

			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/bookmarkedit_view_summary"
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<EditText
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:ems="10"
					android:hint="地址"/>

			</android.support.design.widget.TextInputLayout>

			<TextView
				android:clickable="true"
				android:foreground="?android:attr/selectableItemBackgroundBorderless"
				android:id="@+id/bookmarkedit_view_folder"
				android:textColor="?android:attr/textColorSecondary"
				android:layout_height="?attr/actionBarSize"
				android:layout_width="match_parent"
				android:text="位置：根目录"
				android:gravity="center_vertical"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="?attr/actionBarSize"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_alignParentBottom="true">

			<Button
				android:id="@+id/bookmarkedit_view_sure"
				android:background="?android:attr/selectableItemBackgroundBorderless"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/sure"
				android:layout_weight="1.0"/>

			<Button
				android:id="@+id/bookmarkedit_view_cancel"
				android:background="?android:attr/selectableItemBackgroundBorderless"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/cancel"
				android:layout_weight="1.0"/>

		</LinearLayout>

	</RelativeLayout>

	<FrameLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/bookmarkedit_view_float"/>

</FrameLayout>

