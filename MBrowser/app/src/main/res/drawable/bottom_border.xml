                android:color="#80888888" />  
            <!--实体背景，颜色透明-->
            <solid android:color="@color/window_background" />
            <!--内容缩进3dp-->
            <!--<padding android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp"/>-->
            <!--边角缩进，不使用-->
            <!-- <corners android:radius="20dp" />-->
        </shape>
    </item>
