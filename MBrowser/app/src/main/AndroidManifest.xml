<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:md="http://schemas.android.com/apk/res-auto"
    package="com.moe.Mbrowser" >
	<use-sdk>
		<minSdkVersion>13</minSdkVersion>
		<targetSdkVersion>25</targetSdkVersion>
	</use-sdk>
    <application
        android:name="com.moe.application.Application"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:manageSpaceActivity=".DataManager"
		android:hardwareAccelerated="true"
		android:configChanges="orientation|keyboardHidden|screenSize">
        <activity
			android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustUnspecified"
            android:launchMode="singleTask"
            android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:scheme="about" />
                <data android:scheme="javascript" />
				<data android:scheme="inline" />
				<data android:scheme="file"/>
                <data android:mimeType="text/html"/>
                <data android:mimeType="text/plain"/>
                <data android:mimeType="application/xhtml+xml"/>
                <data android:mimeType="application/vnd.wap.xhtml+xml"/>
            </intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.WEB_SEARCH" />
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
		<activity
			android:excludeFromRecents="true"
			android:name=".M3u8AddActivity"
			android:label="m3u8视频文件"
			android:theme="@style/searchDialog">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" 
					android:mimeType="text/plain"/>
				<data android:scheme="file" 
					android:mimeType="text/html"/>
				<data android:scheme="file" 
					android:mimeType="application/x-mpegURL"/>
				<data android:scheme="file" 
					android:mimeType="application/vnd.apple.mpegurl"/>
				<data android:scheme="file" 
					android:mimeType="text/*"/>
			</intent-filter>
		</activity>
        <activity android:name=".ExceptionActivity"/>
        <activity android:name=".DataManager"/>
		<activity android:name=".FileExplorer"/>
		<service android:name=".DownloadService"/>
		<service android:name=".ResourceService"/>
		<provider
			android:name="android.support.v4.content.FileProvider"
			android:authorities="com.moe.Mbrowser.fileProvider"
			android:grantUriPermissions="true"
			android:exported="false">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths" />
		</provider>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.READ_PHONE_STATE" />-->
	<uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />  
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.FLASHLIGHT" />
  	<uses-permission android:name="android.permission.HARDWARE_TEST" />  
</manifest>
